<div class="random-beer-container">
  <div class="randomBeer-div">
    <img src={{beer.image_url}} class="beer">
  </div>
  <div class="info">
    <h1>{{beer.name}}</h1>
    <h5 class="tagline">{{beer.tagline}}</h5>
    <p class="description">{{beer.description}}</p>
    <p><strong>Food Pairing</strong></p>
    <ul>
      {{#each beer.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><strong>Brewers Tips:</strong> {{beer.brewers_tips}}</p>
  </div>
</div>